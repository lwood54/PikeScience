<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Exo" rel="stylesheet">
    <link rel="stylesheet" href="../stylesheets/altDigManipTemp.css">
    <title>{{title}}</title>
</head>
<body>
    <div class="pageContainer">
        <div class="gameBoard">
            <div class="col1">
                <h4>{{col1Heading}}</h4>
                <div class="targetCol1 dropZone" id="targCol1Row1"></div>
                <div class="targetCol1 dropZone" id="targCol1Row2"></div>
                <div class="targetCol1 dropZone" id="targCol1Row3"></div>
            </div>
            <div class="col2">
                <h4>{{col2Heading}}</h4>
                <div class="targetCol2 dropZone" id="targCol2Row1"></div>
                <div class="targetCol2 dropZone" id="targCol2Row2"></div>
                <div class="targetCol2 dropZone" id="targCol2Row3"></div>
            </div>
            <div class="col3">
                <h4>{{col3Heading}}</h4>
                <div class="targetCol3 dropZone" id="targCol3Row1"></div>
                <div class="targetCol3 dropZone" id="targCol3Row2"></div>
                <div class="targetCol3 dropZone" id="targCol3Row3"></div>
            </div>
            <div class="col4">
                <h4>{{col4Heading}}</h4>
                <div class="targetCol4 dropZone" id="targCol4Row1"></div>
                <div class="targetCol4 dropZone" id="targCol4Row2"></div>
                <div class="targetCol4 dropZone" id="targCol4Row3"></div>
            </div>
            <div class="col5">
                <h4>{{col5Heading}}</h4>
                <div class="targetCol5 dropZone" id="targCol5Row1"></div>
                <div class="targetCol5 dropZone" id="targCol5Row2"></div>
                <div class="targetCol5 dropZone" id="targCol5Row3"></div>
            </div>
        </div> <!-- END OF .gameBoard -->

        <div class="pageInfo">
            <div id="cardSelection">
                <!-- COLUMN 1 CHOICES -->
                <img class="choices forCol1" id="col1Choice1" src="{{col1Img}}" alt="">
                <h5 class="choices textAnswers forCol1" id="col1Choice2">{{col1Hint}}</h5>
                <h5 class="choices textAnswers forCol1" id="col1Choice3">{{col1Def}}</h5>

                <!-- COLUMN 2 CHOICES -->
                <img class="choices forCol2" id="col2Choice1" src="{{col2Img}}" alt="">
                <h5 class="choices textAnswers forCol2" id="col2Choice2">{{col2Hint}}</h5>
                <h5 class="choices textAnswers forCol2" id="col2Choice3">{{col2Def}}</h5>

                <!-- COLUMN 3 CHOICES -->
                <img class="choices forCol3" id="col3Choice1" src="{{col3Img}}" alt="">
                <h5 class="choices textAnswers forCol3" id="col3Choice2">{{col3Hint}}</h5>
                <h5 class="choices textAnswers forCol3" id="col3Choice3">{{col3Def}}</h5>

                <!-- COLUMN 4 CHOICES -->
                <img class="choices forCol4" id="col4Choice1" src="{{col4Img}}" alt="">
                <h5 class="choices textAnswers forCol4" id="col4Choice2">{{col4Hint}}</h5>
                <h5 class="choices textAnswers forCol4" id="col4Choice3">{{col4Def}}</h5>

                <!-- COLUMN 5 CHOICES -->
                <img class="choices forCol5" id="col5Choice1" src="{{col5Img}}" alt="">
                <h5 class="choices textAnswers forCol5" id="col5Choice2">{{col5Hint}}</h5>
                <h5 class="choices textAnswers forCol5" id="col5Choice3">{{col5Def}}</h5>

                <!-- BUTTON ON COMPLETION -->
                <button type="button" name="button" id="nextButton"></button>      

            </div> <!-- END OF .cardSelection -->
            <div class="scoreBoard">
                <!-- SCORE KEEPING -->
                <div id="score">
                    <p id="scoreWord">MISSED</p>
                    <p id="number">0</p>
                </div>
            </div>

            <div class="headerGroup">
                <div class="pageTitle">
                    <h4>{{subHeading}}</h4>
                    <h6>-by Logan Wood</h6>
                </div>
                <div class="dropDown">
                    <button class="dropbtn" aria-hidden="true" onclick="dropDownMenu()">MENU</button>
                    <div id="dropDownMenu" class="dropdown-content">
                        <a href="/">Home</a>
                        <a href="/digitalManipulative4_1_Sec_1">Manipulative 4.1</a>
                        <a href="/digitalManipulative4_3_Sec_1">Manipulative 4.3</a>
                    </div>
                </div>
            </div>
        </div>
    
    <script src="/javascripts/altDigManipLogic.js"></script>
    <script src="../javascripts/main.js"></script>
</body>
</html>