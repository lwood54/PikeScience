<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    {{!-- load fontawesome script --}}
    <script src="https://use.fontawesome.com/448458d43e.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Exo" rel="stylesheet">
    <link rel="stylesheet" href="../stylesheets/digitalManipulative.css">
    <title>{{title}}</title>
  </head>
  <body>
    <div class="headerGroup">
      <div class="pageTitle">
        <h1>{{pageTitle}}</h1>
        <h4>{{subHeading}}</h2>
        <h5>- by Logan Wood</h5>
      </div>
      <div class="dropDown">
        <i class="fa fa-bars dropbtn" aria-hidden="true" onclick="dropDownMenu()"></i>
        <div id="dropDownMenu" class="dropdown-content">
          <a href="/">Home</a>
          {{!-- <a href="/digitalManipulative1_1_Sec_1">Manipulative 1.1</a> --}}
          <a href="/digitalManipulative4_1_Sec_1">Manipulative 4.1</a>
        </div>
      </div>
    </div>


    <div class="container">
      <div class="section1">
        <div class="col1">
          <h4>{{col1Heading}}</h4>
          <div class="row1 dropZone targetCol1" id="targCol1Row1"></div>
          <div class="row2 dropZone targetCol1" id="targCol1Row2"></div>
          <div class="row3 dropZone targetCol1" id="targCol1Row3"></div>
        </div>
        <div class="col2">
          <h4>{{col2Heading}}</h4>
          <div class="row1 dropZone targetCol2" id="targCol2Row1"></div>
          <div class="row2 dropZone targetCol2" id="targCol2Row2"></div>
          <div class="row3 dropZone targetCol2" id="targCol2Row3"></div>
        </div>
        <div class="col3">
          <h4>{{col3Heading}}</h4>
          <div class="row1 dropZone targetCol3" id="targCol3Row1"></div>
          <div class="row2 dropZone targetCol3" id="targCol3Row2"></div>
          <div class="row3 dropZone targetCol3" id="targCol3Row3"></div>
        </div>
        <div class="col4">
          <h4>{{col4Heading}}</h4>
          <div class="row1 dropZone targetCol4" id="targCol4Row1"></div>
          <div class="row2 dropZone targetCol4" id="targCol4Row2"></div>
          <div class="row3 dropZone targetCol4" id="targCol4Row3"></div>
        </div>
        <div class="col5">
          <h4>{{col5Heading}}</h4>
          <div class="row1 dropZone targetCol5" id="targCol5Row1"></div>
          <div class="row2 dropZone targetCol5" id="targCol5Row2"></div>
          <div class="row3 dropZone targetCol5" id="targCol5Row3"></div>
        </div>
      </div> <!-- END OF SECTION 1 GAME BOARD -->

      <div id="footer">
        <!-- ANSWER CHOICES SECTION -->
        <div id="section1ChoicesContainer">
          <!-- COLUMN 1 CHOICES -->
          <img class="section1Choices forCol1" id="col1Choice1" src="{{col1Img}}" alt="">
          <h2 class="section1Choices textAnswers forCol1" id="col1Choice2">
            {{col1Hint}}
          </h2>
          <h2 class="section1Choices textAnswers forCol1" id="col1Choice3">
            {{col1Def}}
          </h2>

          <!-- COLUMN 2 CHOICES -->
          <img class="section1Choices forCol2" id="col2Choice1" src="{{col2Img}}" alt="">
          <h2 class="section1Choices textAnswers forCol2" id="col2Choice2">
            {{col2Hint}}
          </h2>
          <h2 class="section1Choices textAnswers forCol2" id="col2Choice3">
            {{col2Def}}
          </h2>

          <!-- COLUMN 3 CHOICES -->
          <img class="section1Choices forCol3" id="col3Choice1" src="{{col3Img}}" alt="">
          <h2 class="section1Choices textAnswers forCol3" id="col3Choice2">
            {{col3Hint}}
          </h2>
          <h2 class="section1Choices textAnswers forCol3" id="col3Choice3">
            {{col3Def}}
          </h2>

          <!-- COLUMN 4 CHOICES -->
          <img class="section1Choices forCol4" id="col4Choice1" src="{{col4Img}}" alt="">
          <h2 class="section1Choices textAnswers forCol4" id="col4Choice2">
            {{col4Hint}}
          </h2>
          <h2 class="section1Choices textAnswers forCol4" id="col4Choice3">
            {{col4Def}}
          </h2>

          <!-- COLUMN 5 CHOICES -->
          <img class="section1Choices forCol5" id="col5Choice1" src="{{col5Img}}" alt="">
          <h2 class="section1Choices textAnswers forCol5" id="col5Choice2">{{col5Hint}}</h2>
          <h2 class="section1Choices textAnswers forCol5" id="col5Choice3">{{col5Def}}</h2>


          <button type="button" name="button" id="nextButton"></button>
        </div> <!-- END OF SECTION1CHOICES CONTAINER-->

        <!-- SCORE KEEPING -->
        <div id="score">
          <p id="scoreWord">MISSED</p>
          <p id="number">0</p>
        </div>
      </div> <!-- END OF FOOTER DIV -->
    </div> <!-- END OF CONTAINER -->

      <script src="/javascripts/digitalManipulative.js"></script>
      <script src="../javascripts/main.js"></script>
  </body>
</html>
